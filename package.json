{
  "name": "dts2dolby",
  "version": "1.0.0",
  "description": "Automatically add AC3/EAC3 tracks to source files when the source files contain only DTS tracks, useful for allowing Plex to Direct Play media on certain devices like the Xbox One, Chromecast, etc",
  "main": "index.js",
  "scripts": {
    "prettify": "eslint --fix *.js && prettier --write *.js",
    "build": "pkg index.js --output ./bin/dts2dolby"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pravinba9495/dts2dolby.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pravinba9495/dts2dolby/issues"
  },
  "homepage": "https://github.com/pravinba9495/dts2dolby#readme",
  "devDependencies": {
    "@types/node": "^14.11.5",
    "eslint": "^7.10.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2"
  },
  "dependencies": {
    "pkg": "^4.4.9",
    "yargs": "^16.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ]
  }
}
